{
    "name": "unitas",
    "version": "0.0.0",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.mts",
    "exports": {
        ".": {
            "import": {
                "types": "./dist/index.d.mts",
                "default": "./dist/index.mjs"
            },
            "require": {
                "types": "./dist/index.d.cts",
                "default": "./dist/index.cjs"
            }
        }
    },
    "scripts": {
        "build": "tsdown",
        "watch": "tsdown --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "test:types": "attw --pack .",
        "coverage": "vitest run --coverage",
        "format": "prettier --write src"
    },
    "engines": {
        "node": ">=20.0.0",
        "npm": ">=10.8.0"
    },
    "files": [
        "src",
        "README.md"
    ],
    "author": {
        "name": "Oleg Kamlowski",
        "email": "oleg.kamlowski@thomann.io"
    },
    "license": "MIT",
    "keywords": [],
    "devDependencies": {
        "@eslint/js": "^9",
        "@types/node": "^24",
        "@typescript-eslint/eslint-plugin": "^8",
        "@typescript-eslint/parser": "^8",
        "@vitest/coverage-istanbul": "^4.0.13",
        "@vitest/coverage-v8": "^4",
        "eslint": "^9",
        "prettier": "^3.6.2",
        "tsdown": "^0.16",
        "tsx": "^4",
        "typescript": "^5",
        "typescript-eslint": "^8",
        "vitest": "^4"
    }
